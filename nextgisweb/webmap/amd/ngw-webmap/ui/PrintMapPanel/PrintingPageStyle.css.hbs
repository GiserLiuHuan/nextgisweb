body {
    width: 100%;
    height: 100%;
    margin: 0;
    padding: 0;
}

div.print-map-page-wrapper,
div.print-map-export-wrapper {
  width: {{ widthPage }}px;
  height: {{ heightPage }}px;
}

.print-map-page {
  width: {{ widthPage }}px;
  height: {{ heightPage }}px;
  padding: 0;
  background-color: white;
}

.print-map-page .print-map div.ol-viewport {
    width: {{ widthMap }}px !important;
    height: {{ heightMap }}px !important;
}

.print-map-page .print-map img.map-logo {
    position: absolute;
    z-index: 9999999;
    top: 2px;
    right: 2px;
}

.print-map {
    width: {{ widthMap }}px !important;
    height: {{ heightMap }}px !important;
    padding: 0 !important;
    overflow: hidden !important;
    margin: {{ margin }}px;
}

@page {
    size: {{ widthPage }}px {{ heightPage }}px;
    margin: {{ margin }}px;
}

@media print {
    html, body {
        width: {{ widthMap }}px !important;
        height: {{ heightMap }}px !important;
        padding: 0 !important;
        margin: 0 !important;
        min-width: {{ widthMap }}px !important;
        max-width: {{ widthMap }}px !important;
    }

    #pDebug {
        display: none;
    }

    .print-map-pane {
      width: {{ widthPage }}px !important;
      height: {{ heightPage }}px !important;
    }

    .print-map-page-wrapper {
      box-shadow: none !important;
      margin: 0 !important;
      padding: 0 !important;
    }

    body #header,
    div.print-controls-pane,
    div.navigation-menu,
    .main-container .map-container,
    #printMapCanvas {
        display: none !important;
    }

    #webmap-wrapper,
    #printMapDialog,
    .dijitTabPaneWrapper.dijitTabContainerTop-container.dijitAlignCenter,
    .main-container,
    #webmap-wrapper div.leftPanelPane,
    .printMap-panel,
    .printMap-panel .dijitBorderContainer {
      width: {{ widthPage }}px !important;
      height: {{ heightPage }}px !important;
    }

    .print-map-export-wrapper,
    .print-map-page,
    .print-map {
      width: {{ widthMap }}px !important;
      height: {{ heightMap }}px !important;
      margin: 0 !important;
      padding: 0 !important;
      overflow: hidden !important;
    }

    div.print-map-export-wrapper {
      position: absolute;
      margin: {{ margin }}px !important;
    }

    #webmap-wrapper div.leftPanelPane,
    div.print-map-pane {
      left: 0 !important;
      top: 0 !important;
      position: absolute;
    }

    #webmap-wrapper {
      top: 0 !important;
    }
}
